<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">
	<body>
		<!-- COMMON start -->
		<head>
			<link rel="stylesheet" href="$resourcePath/css/custom.css"/>
			<link rel="stylesheet" href="$resourcePath/css/github.min.css"/>
			<script src="$resourcePath/js/highlight.min.js"></script>
			<script src="$resourcePath/js/jquery.min.js"></script>
		</head>
		<!-- COMMON end -->
		
		<menu name="Parent Project" ref="parent" />
		<menu name="Modules" ref="modules" />
		<menu name="Reports" ref="reports" />
	</body>

	<!-- COMMON start -->
 	<skin>
		<groupId>lt.velykis.maven.skins</groupId>
		<artifactId>reflow-maven-skin</artifactId>
		<version>1.1.1</version>
	</skin>

	<publishDate position="bottom" format="yyyy-MM-dd"/>
	<version position="bottom"/>
	<!-- COMMON end -->
	
	<bannerLeft>
		<name>
			Maven plugin for
          <![CDATA[
          <span class="color-highlight"> TIBCO BusinessWorks</span>
          ]]>
		</name>
		<href>./index.html</href>
	</bannerLeft>

	<custom>
		<reflowSkin>
			<!-- COMMON start -->
			<localResources>true</localResources>
			<absoluteResourceURL>${repositorySiteURL}</absoluteResourceURL>
			<!-- Make this to 'false' for local development, i.e. file:// URLs -->
			<protocolRelativeURLs>true</protocolRelativeURLs>
			<smoothScroll>true</smoothScroll>
			<theme>site</theme>
			<highlightJs>true</highlightJs>
			<highlightJsTheme>github</highlightJsTheme>
			<imgLightbox>true</imgLightbox>
			<brand>
				<!-- Brand text in top-left part of the site -->
				<name>
		          <![CDATA[
		          <style>.navbar .brand { padding: 5px 20px;}</style><a class="brand" href="${repositorySiteURL}/index.html"><span class="color-highlight">FC</span> TIBCO Factory</a><span class="brand" style="padding: 5px 5px;">/</span><a class="brand" href="${repositorySiteURL}/bw-maven-parent/bw-maven-plugin/index.html"><span class="color-highlight">BWMaven</span> plugin</a>
		          ]]>
				</name>
			</brand>
			<titleTemplate>%2$s | %1$s</titleTemplate>
			<!-- Use Table of Contents at the top of the page (max 6 elements) -->
			<toc>top</toc>
			<tocTopMax>6</tocTopMax>
			<skinAttribution>false</skinAttribution>
			<!-- COMMON end -->
			<pages>
		        <index>
					<!-- no breadcrumbs on the main index page -->
					<breadcrumbs>false</breadcrumbs>
					<!-- no ToC on the main index page -->
					<toc>false</toc>
					<markPageHeader>false</markPageHeader>
					<sections>
						<body />
						<columns>1</columns>
						<columns>4</columns>
						<columns>1</columns>
						<columns>2</columns>
					</sections>
		        </index>
			</pages>
		</reflowSkin>
	</custom>

</project>