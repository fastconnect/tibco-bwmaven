<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin-with-jars</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<files>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.package.directory}/${deploy.pom}</source>
			<destName>${deploy.pom}</destName>
		</file>
	</files>

	<moduleSets>
		<!-- moduleSet for EARs -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>*:bw-ear</include>
			</includes>
 			<binaries>
 				<outputDirectory>${package.bw.applications.root}/${module.properties.assembly.relative.path}/${module.artifactId}/</outputDirectory>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<!-- moduleSet for deploy POMs ('bw-ear-deploy' packaging) -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>*:bw-ear</include>
			</includes>
 			<binaries>
 				<outputDirectory>${package.bw.applications.root}/${module.properties.assembly.relative.path}/${module.artifactId}/</outputDirectory>
 				<outputFileNameMapping>${module.properties.deploy.pom}</outputFileNameMapping>
				<unpack>false</unpack>
				<attachmentClassifier>deployment</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<!-- moduleSet for final configuration XML file -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>*:bw-ear</include>
			</includes>
 			<binaries>
 				<outputDirectory>${package.bw.applications.root}/${module.properties.assembly.relative.path}/${module.artifactId}/</outputDirectory>
				<unpack>false</unpack>
				<attachmentClassifier>final</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<!-- moduleSet for JARs (transitive dependencies of BW EARs) -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>*:bw-ear</include>
			</includes>
 			<binaries>
 				<outputDirectory>${package.bw.applications.root}/${module.properties.assembly.relative.path}/${module.artifactId}/</outputDirectory>
				<unpack>false</unpack>
 				<dependencySets>
					<dependencySet>
						<includes>
							<include>*:jar</include>
						</includes>
						<outputDirectory>libs/</outputDirectory>
						<scope>runtime</scope>
						<useProjectArtifact>false</useProjectArtifact>
						<unpack>false</unpack>
						<useTransitiveFiltering>true</useTransitiveFiltering>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>

</assembly>