	<custom>
		<reflowSkin>
			<localResources>true</localResources>

			<absoluteResourceURL>${rootSiteDisplayURL}</absoluteResourceURL>
			<protocolRelativeURLs>true</protocolRelativeURLs>

			<brand>
				<name>
		          <![CDATA[
		          <style>.navbar .brand { padding: 5px 20px;}</style><a class="brand" href="${rootSiteDisplayURL}/index.html"><span class="color-highlight">FC</span> TIBCO Factory</a><span class="brand" style="padding: 5px 5px;">/</span><a class="brand" href="${repositorySiteDisplayURL}/index.html"><span class="color-highlight">BWMaven</span> plugin</a>
